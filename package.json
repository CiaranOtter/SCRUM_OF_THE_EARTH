{
  "scripts": {
    "setup": "npm install --save-dev jest && npm install --save-dev coverage-badge-creator",
    "initialize-coverage": "coverage-badge-creator --config './coverage/coverage-final.json'",
    "test": "jest --coverage && coverage-badge-creator",
    "badges": "coverage-badge-creator"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "json-summary"
    ]
  },
  "dependencies": {
    "expo-cli": "^5.3.0"
  },
  "devDependencies": {
    "coverage-badge-creator": "^1.0.11",
    "jest": "^27.5.1"
  }
}
